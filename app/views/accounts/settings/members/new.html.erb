<%= irelia_page_header(title: t(".title"), subline: t(".description", team_name: @account.name)) do |header| %>
  <% header.with_button(url: account_settings_members_path, color: :secondary, icon: "fa fa-arrow-left") { t("accounts.settings.members.action_buttons.back") } %>
<% end %>
<%= irelia_container size: :md do %>
  <%= irelia_flex direction: :column do %>
    <%= irelia_html do %>
      <%= simple_format t(".content") %>
    <% end %>
    <%= irelia_form(model: @member, url: account_settings_members_path, method: :post) do |form| %>
      <%= form.email_field :invitation_email, label: t(".form.invitation_email.label"), placeholder: t(".form.invitation_email.placeholder"), hint: t(".form.invitation_email.hint") %>
      <%= irelia_div padding_top: :sm do %>
        <%= form.submit t(".form.submit") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
