<%= irelia_page_header(title: t(".title", member_name: @member.name), subline: t(".description", team_name: @account.name)) do |header| %>
  <% header.with_button(url: account_settings_members_path, color: :secondary, icon: "fa fa-arrow-left") { t("accounts.settings.members.action_buttons.back") } %>
<% end %>


<%=
if current_member == @member
  irelia_button_to t(".leave_account.button"), account_settings_member_path(id: @member), method: :delete, color: :danger, name: "commit", data: { turbo_confirm: t(".delete_member.confirmation_message") }, method: :delete
else
  irelia_button_to t(".delete_member.button"), account_settings_member_path(id: @member), method: :delete, color: :danger, name: "commit", data: { turbo_confirm: t(".delete_member.confirmation_message") }, method: :delete
end
%>
