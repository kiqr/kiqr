<% if user_signed_in? %>
  <%= irelia_navbar do |navbar| %>
    <%= navbar.with_brand(url: dashboard_path) { "KIQR" } %>
    <%= navbar.with_separator %>
    <%= navbar.with_navigation do |nav| %>
      <%= nav.with_link(url: dashboard_path, active: true) { "Dashboard" } %>
    <% end %>
    <%= navbar.with_separator %>
    <%= navbar.with_section do %>
      <%# TODO: account selector %>
      <%= irelia_dropdown do |dropdown| %>
        <%= dropdown.with_trigger(icon: "fa fa-gear", size: :sm, color: :secondary) %>
        <%= dropdown.with_item(right_icon: "fas fa-user", url: edit_settings_path) { "Profile" } %>
        <%= dropdown.with_item(right_icon: "fas fa-users", url: edit_account_path) { "Team settings" } if current_account.team? %>
        <%= dropdown.with_item(right_icon: "fas fa-sync", url: select_account_path) { "Switch account" } %>
        <%= dropdown.with_item(right_icon: "fas fa-users", url: new_account_path) { "Team accounts" } %>
      <% end %>
      <%= irelia_button_to destroy_user_session_path, method: :delete, size: :sm, color: :secondary, icon: "fas fa-right-from-bracket" %>
    <% end %>
  <% end %>
<% else %>
  <%= irelia_navbar do |navbar| %>
    <%= navbar.with_brand(url: root_path) { "KIQR" } %>
    <%= navbar.with_separator %>
    <%= navbar.with_navigation do |nav| %>
      <%= nav.with_link(url: root_path, active: true) { "Home" } %>
      <%= nav.with_link(url: "#") { "Features" } %>
      <%= nav.with_link(url: "#") { "Pricing" } %>
      <%= nav.with_link(url: "#") { "Documentation" } %>
    <% end %>
    <%= navbar.with_separator %>
    <%= navbar.with_section do %>
      <%= irelia_button(url: new_user_registration_path, size: :sm, color: :secondary) { "Create account" } %>
      <%= irelia_button(url: new_user_session_path, size: :sm, method: :delete) { "Sign in" } %>
    <% end %>
  <% end %>
<% end %>
