<%= irelia_page_header(title: t(".title", app_name: Rails.configuration.application_name), subline: t(".description")) %>

<%= irelia_container size: :md do %>
  <%= irelia_html do%>
    <p><%= t(".content") %></p>

    <% if @conflicting_members.any? %>
      <p><%= t(".remove_team_accounts_first") %></p>
      <strong><%= t(".owned_team_accounts") %></strong>
      <ul>
        <% @conflicting_members.each do |account_user| %>
          <li><%= account_user.account.name %></li>
        <% end %>
      </ul>
    <% else %>
      <%= irelia_div padding_top: :sm do %>
        <%= irelia_button_to t(".submit"), user_registration_path, color: :danger, name: "commit", data: { confirm: t(".confirmation_message"), turbo_confirm: t(".confirmation_message") }, method: :delete %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
