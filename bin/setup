#!/usr/bin/env ruby

ENV["RAILS_ENV"] = "test"

require "bundler/setup"

# Print a message indicating the setup script is running.
puts "Running setup script..."

# Run the command to set up KIQR extensions in the test app.
system("bundle install --quiet")
system("bundle exec kiqr extensions test_app")

# Run the migrations.
system("bin/rails db:migrate")

# Print a message indicating the setup script is done.
puts "Setup script completed."
