<%= irelia_form(model: user, url: user_settings_two_factor_path, method: :post, id: "two_factor_form") do |form| %>
  <%= t(".instructions") %>
  <%= form.text_field :otp_attempt, label: t(".label"), placeholder: t(".placeholder") %>
  <%= irelia_div padding_top: :sm do %>
    <%= form.submit t(".verify_button") %>
  <% end %>
<% end %>
