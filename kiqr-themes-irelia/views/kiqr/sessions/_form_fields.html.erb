<%= form.email_field :email, label: t(".email.label"), placeholder: t(".email.placeholder"), autofocus: true, autocomplete: "email" %>
<%= form.password_field :password, label: t(".password.label"), placeholder: t(".password.placeholder"), autocomplete: "current-password" %>

<% if devise_mapping.rememberable? %>
  <%= irelia_flex do %>
    <%= form.check_box :remember_me %>
    <%= form.label :remember_me %>
  <% end %>
<% end %>
