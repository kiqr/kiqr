<h1><%= t(".title", app_name: Kiqr::Config.app_name) %></h1>
<h2><%= t(".description") %></h2>

<p><%= t(".content") %></p>

<% if @conflicting_account_users.any? %>
  <p><%= t(".remove_team_accounts_first") %></p>
  <strong><%= t(".owned_team_accounts") %></strong>
  <ul>
    <% @conflicting_account_users.each do |account_user| %>
      <li><%= account_user.account.name %></li>
    <% end %>
  </ul>
<% else %>
  <%= button_to t(".submit"), user_registration_path, name: "commit", data: { confirm: t(".confirmation_message"), turbo_confirm: t(".confirmation_message") }, method: :delete %>
<% end %>
