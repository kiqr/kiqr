#!/usr/bin/env bash

VERSION=$1

printf "module Kiqr\n  VERSION = \"$VERSION\"\nend\n" > ./lib/kiqr/version.rb
bundle
git add Gemfile.lock lib/kiqr/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
gem build kiqr.gemspec
gem push "kiqr-$VERSION.gem" --host https://rubygems.org
rm "kiqr-$VERSION.gem"